<Window x:Class="WpfHack.LicensePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter License Key"
        Height="300" Width="600"
        Background="AliceBlue"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="ToolWindow">

    <StackPanel Margin="20">
        <TextBlock Text="Enter 218-digit License Key:"
                   Foreground="black"
                   FontSize="16"
                   Margin="0,0,0,10"/>

        <TextBox x:Name="LicenseKeyBox"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 Width="540"
                 Height="120"
                 FontFamily="Consolas"
                 FontSize="14"
                 Margin="0,0,0,20"
                 Background="White"
                 Foreground="Black"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Validate Key"
                    Width="140" Height="40"
                    Background="White"
                    Foreground="Navy"
                    FontWeight="Bold"
                    Margin="0,0,20,0"
                    Click="Validate_Click"/>
            <Button Content="Close"
                    Width="100" Height="40"
                    Background="White"
                    Foreground="Navy"
                    FontWeight="Bold"
                    Click="Close_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
